<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">


    <EditText
        android:id="@+id/test_edit1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="text"
        android:autofillHints=""
        android:textSize="16sp"
        android:hint="test_edit1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
        android:id="@+id/test_edit2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="text"
        android:autofillHints=""
        android:textSize="16sp"
        android:hint="test_edit2"
        app:layout_constraintTop_toBottomOf="@+id/test_edit1"
        app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
        android:id="@+id/test_edit3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:inputType="text"
        android:autofillHints=""
        android:textSize="16sp"
        android:hint="test_edit3"
        app:layout_constraintTop_toBottomOf="@+id/test_edit2"
        app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/test_view1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="test_view1"
        app:layout_constraintTop_toBottomOf="@+id/test_edit3"
        app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/test_view2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="test_view2"
        app:layout_constraintTop_toBottomOf="@+id/test_view1"
        app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
        android:id="@+id/test_view3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="test_view2"
        app:layout_constraintTop_toBottomOf="@+id/test_view2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/test_view4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="test_view2"
        app:layout_constraintTop_toBottomOf="@+id/test_view3"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/test_view5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="test_view2"
        app:layout_constraintTop_toBottomOf="@+id/test_view4"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickTest"
        android:text="test_button"
        app:layout_constraintTop_toBottomOf="@+id/test_view5"
        app:layout_constraintStart_toStartOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>